{
  "name": "artarc4u",
  "version": "1.0.0",
  "description": "ArtArc4U - Artwork Management System",
  "scripts": {
    "start": "node server/index.js",
    "start:server": "node server/index.js",
    "start:client": "cd client && npm start",
    "start:dev": "concurrently \"npm run start:server\" \"npm run start:client\" --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\"",
    "start:prod": "npm run build && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install && cd ../admin-gui && npm install",
    "admin": "cd admin-gui && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
